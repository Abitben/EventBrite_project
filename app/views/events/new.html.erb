<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <br>
      <br>
      <br>
      <%= form_for @event, html: { class: "form-signin mt-3" } do |f| %>
        <h1 class="h3 mb-3 font-weight-normal text-center">Créer un événement</h1>
        <% if @event.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
            <ul>
              <% @event.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class="form-group">
          <%= f.label :title, "Titre" %><br />
          <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :description, "Description" %><br />
          <%= f.text_area :description, autofocus: true, autocomplete: "description", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :start_date, "Date de début" %><br />
          <%= f.datetime_select :start_date, { prompt: { day: 'Jour', month: 'Mois', year: 'Année', hour: 'Heure', minute: 'Minute' } }, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :duration, "Durée (en minutes)" %><br />
          <%= f.number_field :duration, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :price, "Prix" %><br />
          <%= f.number_field :price, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :location, "Location" %><br />
          <%= f.text_area :location, class: "form-control" %>
        </div>
        <div class="actions mt-5">
          <%= f.submit "Créer l'événement", class: "btn btn-lg btn-primary btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
